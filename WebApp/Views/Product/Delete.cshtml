@using Microsoft.AspNetCore.Server.Kestrel
@model Product

@{
    ViewData["Title"] = "Delete";
}
<style type="text/css">
</style>

<h2>Delete</h2>


<form asp-action="Delete" asp-controller="Product" method="post">
    <div class="form-horizontal">
        <h4>Product</h4>
        <h3 class="text-danger">Are you sure you want to delete this product?</h3>
        <hr />
        <div class="form-group">
            <label asp-for="ProductName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProductName" class="form-control" disabled="disabled" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Category" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Category" class="form-control" placeholder="Enter category" />
                <span asp-validation-for="Category" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProductPrice" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ProductPrice" class="form-control" disabled="disabled" />
            </div>
        </div>
        <div class="form-group">
            @if (@Model.IsUnlimited)
            {
                <div class="col-md-10">
                    <label asp-for="Quantity" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <mark  class="alert-info">Product is unlimited</mark>
                    </div>
                </div>
            }
            else
            {
                <label asp-for="Quantity" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Quantity" class="form-control" disabled="disabled"/>
                </div>
            }
        </div>
        <div class="form-group">
            <label asp-for="ProductDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="ProductDescription" class="form-control" disabled="disabled"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <img src="~/images/@Model.ThumbPath" alt="@Model.ProductName image" class="img-thumbnail" />
                <br />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger"/>
                <a asp-action="Index" class="btn btn-warning">Cancel</a>
            </div>
        </div>
    </div>
</form>

