@model BigProductModel


    <html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script type="text/javascript" src="lib/jquery/dist/jquery.min.js"></script> <!--http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js-->
        <script type="text/javascript" src="lib/bootstrap/dist/js/bootstrap.min.js"></script> <!--http://netdna.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"-->
        <link href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
        <link href="~/css/productList.css" rel="stylesheet" type="text/css">
    </head>
    <body>
        <div class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-10">
                        <ul class="nav nav-pills color">
                            <li class="active">
                                <a href="#">noAction</a>
                            </li>
                            <li>
                                <a href="#">noAction</a>
                            </li>
                            <li>
                                <a href="#">noAction</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-2 text-center">
                        <a href="#">
                            <i class="fa fa-4x fa-fw fa-shopping-cart pull-right text-primary"></i>
                        </a>
                        <span class="badge">@Model.products.Count</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="page-header">
                            <h1>
                                page header <small>Subtext</small>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-right">
                        <ul class="pagination">
                            <li>
                                <a href="#">Prev</a>
                            </li>
                            <li>
                                <a href="#">1</a>
                            </li>
                            <li>
                                <a href="#">2</a>
                            </li>
                            <li>
                                <a href="#">3</a>
                            </li>
                            <li>
                                <a href="#">4</a>
                            </li>
                            <li>
                                <a href="#">5</a>
                            </li>
                            <li>
                                <a href="#">Next</a>
                            </li>
                        </ul>
                    </div>
                    <hr />
                </div>
            </div>
        </div>
        <div class="section">
            <div class="container">

                @foreach (var s in Model.products)
            {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-4 text-center">
                                    <img src="/images/@s.ThumbPath" class="img-responsive">
                                    <a href="#">
                                        <i class="fa fa-3x fa-fw fa-cart-plus"></i>
                                    </a>

                                </div>
                                <div class="col-md-7">
                                    <h1>@s.ProductName</h1>

                                    @if (!s.IsUnlimited)
                                    {
                                        <h3>State: Available</h3>
                                    }
                                    else
                                    {
                                        <h3>State: @s.Quantity products at stock</h3>
                                    }
                                    <p>
                                        @s.ProductDescription
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                }

            </div>
        </div>
        <div class="section">
            <div class="container">
            </div>
        </div>
        <div class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <a class="btn btn-primary">Click me</a>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
